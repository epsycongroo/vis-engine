{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "removeComments": false,
    "moduleResolution": "node",
    "types": [
      "node",
      "vitest"
    ],
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "package.json",
    "rollup.config.ts",
    "typings.d.ts"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ]
}
